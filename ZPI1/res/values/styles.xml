<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- multiple button panel styles -->
    <style name="MultipleButtonStyle">
        <item name="android:padding">@dimen/buttons_padding</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>
    <style name="MultipleButtonLeftStyle" parent="@style/MultipleButtonStyle">
        <item name="android:background">@drawable/multiple_button_selector_left</item>
    </style>
    <style name="MultipleButtonMiddleStyle" parent="@style/MultipleButtonStyle">
        <item name="android:background">@drawable/multiple_button_selector_middle</item>
    </style>
    <style name="MultipleButtonRightStyle" parent="@style/MultipleButtonStyle">
        <item name="android:background">@drawable/multiple_button_selector_right</item>
    </style>

</resources>