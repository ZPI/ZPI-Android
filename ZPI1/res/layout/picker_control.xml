<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/customPicker"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_margin="5dp"
     android:gravity="center"
     android:orientation="vertical" >

        <Button
            android:id="@+id/picker_plus"
            android:layout_width="@dimen/picker_button_width"
            android:layout_height="@dimen/picker_button_height"     
            android:text="+"
            android:layout_gravity="center"/> 
        <EditText
            android:id="@+id/picker_display"
            android:layout_width="@dimen/picker_edit_text_width"
            android:layout_height="@dimen/picker_edit_text_height"
            android:focusable="false"
            android:gravity="center"
            android:singleLine="true">
        </EditText>
        <Button
            android:id="@+id/picker_minus"
            android:layout_width="@dimen/picker_button_width"
            android:layout_height="@dimen/picker_button_height"  
            android:text="-"
            android:layout_gravity="center"/>
    </LinearLayout>
