<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:textColor="@android:color/white"
        android:background="@drawable/triangle" />

    <com.pwr.zpi.views.VerticalTextView
        android:id="@+id/buttonPlans"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Plany treningowe"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/button_background"
        android:padding="@dimen/buttons_padding" />
    
    <com.pwr.zpi.views.VerticalTextView
        android:id="@+id/buttonHistory"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Historia"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="bottom"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/button_background"
        android:padding="@dimen/buttons_padding" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/ustawienia"
        android:background="@drawable/button_background"
        android:padding="@dimen/buttons_padding" />

    <TextView
        android:id="@+id/textViewGPSIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPlans"
        android:layout_centerHorizontal="true"
        android:text="Muzyka"
        android:background="@drawable/button_background"
        android:padding="@dimen/buttons_padding" />

</RelativeLayout>