<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pwr.zpi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical" >

    <com.pwr.zpi.views.TopBar
        android:id="@+id/topBarNewWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hasLeftButton="true"
        app:leftButtonText="@string/workouts"
        app:titleText="@string/new_workout" >
    </com.pwr.zpi.views.TopBar>

    <TextView
        android:id="@+id/textViewWorkoutNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/name_caps"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/medium_text_size" />

    <EditText
        android:id="@+id/editTextWorkoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_background"
        android:editable="true"
        android:ems="10"
        android:inputType="text"
        android:paddingBottom="@dimen/buttons_padding"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/buttons_padding" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextViewWorkoutActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/actions_caps"
       	android:textSize="@dimen/medium_text_size"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>